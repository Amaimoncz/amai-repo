            <include content="BusyListSpinner">
                <param name="list_id" value="$PARAM[list_id]"/>
                <param name="posy" value="250"/>
            </include>
            <control type="panel" id="$PARAM[list_id]">
                <left>15</left>
                <top>115</top>
                <visible>Integer.IsGreater(Container($PARAM[list_id]).NumItems,0) | Container($PARAM[list_id]).IsUpdating</visible>
                <right>0</right>
                <height>1000</height>
                <orientation>vertical</orientation>
                <include content="WidgetWallCommonNew">
                    <param name="list_id" value="$PARAM[list_id]"/>
                </include>
                <itemlayout width="345" height="260">
                    <visible>!String.IsEqual(Container($PARAM[list_id]).ListItem.Title,next)</visible>
                    <control type="group">
                        <left>68</left>
                        <top>10</top>
                        <include content="InfoWall_Trakt">
                            <param name="focused" value="false" />
                        </include>
                    </control>
                </itemlayout>
                <focusedlayout width="345" height="260">
                    <visible>!String.IsEqual(Container($PARAM[list_id]).ListItem.Title,next)</visible>
                    <control type="group">
                        <depth>DepthContentPopout</depth>
                        <left>68</left>
                        <top>10</top>
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="110" time="200" tween="sine" easing="inout" center="230,130" />
                        </animation>
                        <animation type="Unfocus">
                            <effect type="zoom" start="110" end="100" time="200" tween="sine" easing="inout" center="230,130" />
                        </animation>
                        <include content="InfoWall_Trakt">
                            <param name="focused" value="true" />
                        </include>
                    </control>
                </focusedlayout>
                <content sortby="$PARAM[sortby]" sortorder="$PARAM[sortorder]" target="$PARAM[widget_target]" limit="$PARAM[item_limit]">$PARAM[content_path]</content>
            </control>
        </definition>
    </include>
    <include name="WidgetInfo"> <!-- Widget Info - Movie/TV Show -->
        <definition>
            <control type="grouplist">
                <left>20</left>
                <top>10</top>
                <bottom>40</bottom>
                <width>440</width>
                <visible>Control.HasFocus($PARAM[container_id])</visible>
                <control type="textbox"> <!-- Movie name-->
                    <left>10</left>
                    <height>150</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <scroll>true</scroll>
                    <font>font36_title</font>
                    <label>[COLOR gold]$INFO[Container($PARAM[container_id]).ListItem.Title][/COLOR] [COLOR gray]($INFO[Container($PARAM[container_id]).ListItem.Year])[/COLOR]</label>
                    <shadowcolor>text_shadow</shadowcolor>
                    <autoscroll delay="5000" time="1500" repeat="5000">true</autoscroll>
                    <visible>String.IsEqual(ListItem.DbType,movie) | String.IsEqual(ListItem.DbType,tvshow)</visible>
                </control>
                <control type="textbox"> <!--TV Show name -->
                    <left>10</left>
                    <height>150</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <textcolor>gold</textcolor>
                    <font>font36_title</font>
                    <label>[COLOR gold]$INFO[Container($PARAM[container_id]).ListItem.TVShowTitle][/COLOR] [COLOR gray]($INFO[Container($PARAM[container_id]).ListItem.Year])[/COLOR]</label>
                    <shadowcolor>text_shadow</shadowcolor>
                    <autoscroll delay="5000" time="1500" repeat="5000">true</autoscroll>
                    <visible>String.IsEqual(ListItem.DbType,episode)</visible>
                </control>
                <control type="textbox"> <!-- Episode of TV Show -->
                    <left>10</left>
                    <height>150</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <textcolor>FF87CEFA</textcolor>
                    <font>font30_title</font>
                    <label>$INFO[Container($PARAM[container_id]).ListItem.Label]</label>
                    <shadowcolor>text_shadow</shadowcolor>
                    <autoscroll delay="5000" time="1500" repeat="5000">true</autoscroll>
                    <visible>String.IsEqual(ListItem.DbType,episode)</visible>
                </control>
                <control type="label"> <!-- Genre-->
                    <left>5</left>
                    <height>60</height>
                    <aligny>center</aligny>
                    <align>center</align>
                    <scroll>true</scroll>
                    <autoscroll delay="5000" time="250" repeat="5000">true</autoscroll>
                    <textcolor>button_focus</textcolor>
                    <font>font30_title</font>
                    <label>$INFO[ListItem.Genre]</label>
                    <shadowcolor>text_shadow</shadowcolor>
                    <visible>!StringIsEmpty(ListItem.Genre) + !String.IsEqual(ListItem.DbType,episode)</visible>
                </control>
                <control type="textbox">
                    <description>Popis deje textbox</description>
                    <left>30</left>
                    <top>0</top>
                    <height>680</height>
                    <width>440</width>
                    <align>justify</align>
                    <font>font30</font>
                    <label>$INFO[Container($PARAM[container_id]).ListItem.Plot][CR]</label>
                    <shadowcolor>text_shadow</shadowcolor>
                    <autoscroll delay="8000" time="1500" repeat="20000">true</autoscroll>
                    <visible>!Container($PARAM[container_id]).ListItem.IsCollection</visible>
                </control>
                <control type="textbox"> <!-- Label no info -->
                    <height>700</height>
                    <font>font30_title</font>
                    <align>center</align>
                    <aligny>center</aligny>
                    <textcolor>grey</textcolor>
                    <label>Nejsou dostupné žádné informace</label>
                    <shadowcolor>text_shadow</shadowcolor>
                    <autoscroll delay="7000" time="1800" repeat="20000">true</autoscroll>
                    <visible>String.IsEmpty(Listitem.Plot) + !ListItem.IsCollection + !ListItem.IsParentFolder</visible>
                </control>
            </control>
        </definition>
    </include>
