<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="InfoWallEpisodeLayout_Amai">	<!-- Episode View -->
		<param name="main_label">$INFO[ListItem.Title]</param>
		<param name="sub_label">$INFO[ListItem.TVShowTitle]</param>
		<param name="thumb_label">$INFO[ListItem.Season,,x]$INFO[ListItem.Episode]</param>
		<param name="fallback_image">DefaultTVShows.png</param>
		<param name="focused">false</param>
		<definition>
			<control type="image">
				<top>10</top>
				<width>316</width>
				<height>288</height>
				<texture>dialogs/dialog-bg-nobo.png</texture>
				<bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
				<bordersize>20</bordersize>
			</control>
			<control type="image">
				<top>6</top>
				<left>-4</left>
				<width>324</width>
				<height>296</height>
				<texture colordiffuse="button_focus">colors/grey.png</texture>
				<bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
				<bordersize>20</bordersize>
				<visible>$PARAM[focused]</visible>
				<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
			</control>
			<control type="image">
				<left>0</left>
				<top>10</top>
				<width>316</width>
				<height>218</height>
				<texture fallback="$PARAM[fallback_image]" background="true">$VAR[InfoWallThumbVar]</texture>
				<aspectratio>scale</aspectratio>
				<bordersize>20</bordersize>
			</control>
			<control type="image">
				<left>20</left>
				<top>138</top>
				<width>276</width>
				<height>70</height>
				<texture>overlays/overlayfade.png</texture>
				<visible>!ListItem.IsParentFolder</visible>
			</control>
			<control type="label"> <!-- Popisek Sx / Ex -->
				<left>31</left>
				<top>178</top>
				<width>260</width>
				<!-- <label>$PARAM[thumb_label]</label> -->
				<label>S$INFO[ListItem.Season,, x E]$INFO[ListItem.Episode]</label>
				<font>font20_title</font>
				<textcolor>gold</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<align>right</align>
			</control>
			<control type="image">
				<left>20</left>
				<top>175</top>
				<width>32</width>
				<height>32</height>
				<texture>$VAR[WallWatchedIconVar]</texture>
			</control>
			<control type="textbox">
				<left>28</left>
				<top>202</top>
				<width>262</width>
				<height>80</height>
				<font>font12</font>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
				<visible>Window.IsActive(videos)</visible>
			</control>
			<control type="group">
				<visible>!Window.IsActive(videos)</visible>
				<control type="label"> <!-- Label TvShow name -->
					<left>29</left>
					<top>210</top>
					<width>260</width>
					<label>$PARAM[sub_label]</label>
					<font>font12</font>
					<textcolor>gold</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>$PARAM[focused]</scroll>
					<align>center</align>
				</control>
				<control type="label">	<!-- Label Episode name -->
					<left>29</left>
					<top>240</top>
					<width>260</width>
					<label>$PARAM[main_label]</label>
					<font>font10</font>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>$PARAM[focused]</scroll>
					<align>center</align>
				</control>
			</control>
			<control type="progress">
				<left>20</left>
				<top>258</top>
				<width>276</width>
				<height>1</height>
				<texturebg></texturebg>
				<midtexture colordiffuse="button_focus" border="3">progress/texturebg_alt_white.png</midtexture>
				<info>ListItem.PercentPlayed</info>
				<visible>!Integer.IsEqual(ListItem.PercentPlayed,0)</visible>
			</control>
			<control type="group">
				<left>134</left>
				<top>8</top>
				<include condition="Skin.HasSetting(circle_rating) | Skin.HasSetting(circle_userrating)">RatingCircle</include>
			</control>
		</definition>
	</include>
	<include name="InfoWallMovieLayout_Amai">	<!-- Movie Poster View -->
		<param name="focused">false</param>
		<definition>
			<control type="group">
				<visible>String.IsEmpty(ListItem.Art(poster))</visible>
				<control type="image">
					<left>15</left>
					<top>-10</top>
					<width>290</width>
					<height>400</height>
					<texture diffuse="special://skin/extras/diffuse_img/diff_550x375.png">dialogs/dialog-bg-nobo.png</texture>
					<bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
					<bordersize>20</bordersize>
				</control>
				<control type="image">
					<left>15</left>
					<top>-10</top>
					<width>290</width>
					<height>400</height>
					<texture diffuse="special://skin/extras/diffuse_img/diff_550x375.png" colordiffuse="button_focus">colors/grey.png</texture>
					<bordersize>20</bordersize>
					<visible>$PARAM[focused]</visible>
					<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
				</control>
				<control type="textbox">
					<left>40</left>
					<top>244</top>
					<width>242</width>
					<height>120</height>
					<font>font27</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<autoscroll time="2000" delay="3000" repeat="5000">$PARAM[focused]</autoscroll>
					<visible>!ListItem.IsParentFolder</visible>
				</control>
				<control type="image">
					<left>24</left>
					<top>-1</top>
					<width>272</width>
					<height>270</height>
					<texture diffuse="special://skin/extras/diffuse_img/diff_550x375.png" fallback="DefaultMovies.png" background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>scale</aspectratio>
					<bordersize>20</bordersize>
				</control>
			</control>
			<control type="group">
				<visible>!String.IsEmpty(ListItem.Art(poster))</visible>
				<control type="image" class="border_radius">
					<left>8</left>
					<top>-17</top>
					<width>304</width>
					<height>414</height>
					<texture diffuse="special://skin/extras/diffuse_img/diff_550x375.png" colordiffuse="button_focus">colors/grey.png</texture>
					<bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
					<bordersize>20</bordersize>
					<visible>$PARAM[focused]</visible>
					<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
				</control>
				<control type="image">
					<left>15</left>
					<top>-10</top>
					<width>290</width>
					<height>400</height>
					<texture diffuse="special://skin/extras/diffuse_img/diff_550x375.png" background="true">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>scale</aspectratio>
					<bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
					<bordersize>20</bordersize>
				</control>
				<control type="image">
					<left>35</left>
					<top>290</top>
					<width>80</width>
					<height>80</height>
					<texture>overlays/overlay-bg.png</texture>
					<visible>Listitem.IsCollection | ListItem.IsPlaying | Integer.IsGreater(ListItem.Playcount,0)</visible>
				</control>
			</control>
			<control type="group">
				<visible>String.IsEqual(ListItem.DBtype,tvshow)</visible>
				<control type="image"> <!-- shadow down-->
					<left>35</left>
					<top>310</top>
					<width>250</width>
					<height>60</height>
					<texture  diffuse="special://skin/extras/diffuse_img/diff_550x375.png" colordiffuse="FCFFFFFF">overlays/overlayfade.png</texture>
					<visible>!String.IsEmpty(ListItem.Art(poster))</visible>
				</control>
				<control type="label">	<!-- Popis dilu total / watched -->
					<left>30</left>
					<top>340</top>
					<width>244</width>
					<label>$INFO[ListItem.Property(WatchedEpisodes)]$INFO[ListItem.Property(TotalEpisodes), / ,]</label>
					<font>font20_title</font>
					<textcolor>gold</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
					<align>right</align>
				</control>
			</control>
			<control type="image">
				<left>35</left>
				<top>338</top>
				<width>32</width>
				<height>32</height>
				<texture>$VAR[WallWatchedIconVar]</texture>
			</control>
			<control type="group">	<!-- Zobrazeni hodnoceni badge, circle, star -->
				<left>134</left>
				<top>-7</top>
				<include condition="Skin.HasSetting(badge_rating) | Skin.HasSetting(badge_userrating)">Badge_Rating</include> 	<!-- Původní hodnocení -->
				<include condition="Skin.HasSetting(circle_rating)">Circle_Rating</include> 	<!-- Hodnocení v kolečku u widgetů -->
				<include condition="Skin.HasSetting(star_rating)">Star_Rating</include> 	<!-- Hodnocení hvězdy -->
				<include condition="Skin.HasSetting(tag_rating)">Tag_Rating</include> 	<!-- Hodnocení hvězdy -->
			</control>
			<control type="progress">
				<left>35</left>
				<top>350</top>
				<width>250</width>
				<height>1</height>
				<texturebg></texturebg>
				<midtexture colordiffuse="button_focus" border="3">progress/texturebg_alt_white.png</midtexture>
				<info>ListItem.PercentPlayed</info>
				<visible>!Integer.IsEqual(ListItem.PercentPlayed,0)</visible>
			</control>
		</definition>
	</include>
    <include name="Info_Favourites">    <!-- Favourites View -->
		<param name="focused">false</param>
		<definition>
			<control type="group">
				<visible>String.IsEmpty(ListItem.Art(poster))</visible>
				<control type="image">  <!-- black background -->
					<left>15</left>
					<top>-10</top>
					<width>320</width>
					<height>400</height>
					<texture diffuse="special://skin/extras/diffuse_img/diff_550x375.png">dialogs/dialog-bg-nobo.png</texture>
					<bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
					<bordersize>20</bordersize>
				</control>
				<control type="image">  <!-- focus background -->
					<left>10</left>
					<top>-15</top>
					<width>330</width>
					<height>410</height>
					<texture colordiffuse="button_focus" diffuse="special://skin/extras/diffuse_img/diff_550x375.png">colors/grey.png</texture>
					<bordersize>20</bordersize>
					<visible>$PARAM[focused]</visible>
					<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
				</control>
				<control type="image">  <!-- picture -->
					<left>15</left>
					<top>-10</top>
					<width>320</width>
					<height>400</height>
					<texture fallback="DefaultMovies.png" background="true" diffuse="special://skin/extras/diffuse_img/diff_550x375.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
					<bordersize>20</bordersize>
				</control>
                <control type="image">  <!-- focus label background -->
					<left>10</left>
					<top>300</top>
					<width>330</width>
					<height>90</height>
					<texture colordiffuse="button_focus" diffuse="special://skin/extras/diffuse_img/diff_550x375.png">colors/grey.png</texture>
					<bordersize>20</bordersize>
					<visible>$PARAM[focused]</visible>
					<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
				</control>
                <control type="label"> <!-- Focus Name Label -->    
                    <left>36</left>
                    <top>327</top>
                    <width>278</width>
                    <font>font27</font>
                    <align>center</align>
                    <label>$INFO[ListItem.Label]</label>
                    <scroll>$[foPARAMcused]</scroll>
                    <visible>$PARAM[focused]</visible>
					<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
                </control>       
			</control>
		</definition>
	</include>
	<include name="InfoWallEpisodeLayoutNextUp"> 	<!-- Widget pro NextUp -->
		<param name="fallback_image">DefaultTVShows.png</param>
		<param name="focused">false</param>
		<definition>
  			<control type="image"> <!-- black background -->
				<top>10</top>
				<width>420</width>
				<height>310</height>
				<texture diffuse="special://skin/extras/diffuse_img/diff_550x375.png">dialogs/dialog-bg-nobo.png</texture>
				<bordertexture border="5" diffuse="special://skin/extras/diffuse_img/diffuse.png">overlays/shadow.png</bordertexture>
				<aspectratio scalediffuse="false" align="center">scale</aspectratio>
				<bordersize>5</bordersize>
			</control>
  			<control type="image"> <!-- focus color background-->
				<top>0</top>
				<left>-10</left>
				<width>440</width>
				<height>330</height>
				<texture colordiffuse="button_focus" diffuse="special://skin/extras/diffuse_img/diff_550x375.png">colors/grey.png</texture>
				<bordertexture border="10" >overlays/shadow.png</bordertexture>
				<bordersize>10</bordersize>
				<visible>$PARAM[focused]</visible>
				<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
			</control>
			<control type="image"> <!-- picture -->
				<left>-15</left>
				<top>-6</top>
				<width>450</width>
				<height>260</height>
				<texture fallback="$PARAM[fallback_image]" background="true" border="5" diffuse="special://skin/extras/diffuse_img/diff_550x375.png">$INFO[Container($PARAM[container_id]).ListItem.Icon]</texture>
				<aspectratio scalediffuse="false" align="center">scale</aspectratio>
				<bordersize>20</bordersize>
			</control>
			<control type="image"> <!-- bottom shadow picture-->
				<left>5</left>
				<top>140</top>
				<width>410</width>
				<height>100</height>
				<texture diffuse="special://skin/extras/diffuse_img/diff_550x375.png">overlays/overlayfade.png</texture>
				<visible>!ListItem.IsParentFolder</visible>
			</control>
			<control type="label"> <!-- Season x Episode -->
				<left>0</left>
				<top>200</top>
				<width>400</width>
				<label>S$INFO[ListItem.Season] x E$INFO[ListItem.Episode]</label>
				<textcolor>gold</textcolor>
				<font>font20_title</font>
				<shadowcolor>text_shadow</shadowcolor>
				<align>right</align>
			</control>
			<control type="group">	<!-- Name TvShow & Name Episode -->
				<visible>!Window.IsActive(videos)</visible>
				<control type="label"> <!-- TvShow name label -->
					<left>18</left>
					<top>240</top>
					<width>382</width>
					<textcolor>gold</textcolor>
					<label>$INFO[ListItem.TVShowTitle]</label>
					<font>font25_title</font>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>$PARAM[focused]</scroll>
					<align>center</align>
				</control>
				<control type="label"> <!-- Episode name label -->
					<left>8</left>
					<top>275</top>
					<width>402</width>
					<textcolor>white</textcolor>
					<label> - $INFO[ListItem.Title] - </label>
					<font>font10</font>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>$PARAM[focused]</scroll>
					<align>center</align>
				</control>
			</control>
			<control type="progress"> 	<!-- Progress bar shlédnuto/ Total -->
				<left>20</left>
				<top>203</top>
				<width>276</width>
				<height>8</height>
				<texturebg></texturebg>
				<midtexture colordiffuse="button_focus" border="3">progress/texturebg_white.png</midtexture>
				<info>ListItem.PercentPlayed</info>
				<visible>!Integer.IsEqual(ListItem.PercentPlayed,0)</visible>
			</control>

		</definition>
	</include>
	<include name="InfoWall_Trakt"> 	<!-- Widget pro Trakt.tv -->
		<param name="fallback_image">defaultmovies.png</param>
		<param name="main_label">$INFO[ListItem.Artist]</param>
		<param name="sub_label">$INFO[ListItem.Title]</param>
		<param name="single_label">$INFO[ListItem.Label]</param>
		<param name="focused">false</param>
